{
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.rulers": [100, 120],
    "editor.trimAutoWhitespace": true,
    "editor.formatOnSaveMode": "file",

    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.associations": {
        ".clang-format": "yaml",
        ".config": "shellscript",
        ".gitignore": "gitignore",
        ".vscode/*.json": "jsonc",
        "*.sh.tmpl": "jinja-shell",
        "*.txt": "plaintext",
        "requirements*.txt": "pip-requirements",
        "setup.cfg": "ini",
        "ssh_config": "ssh_config"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true
    },

    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/.venv": true,
        "**/__pycache__": true
    },

    "[python]": {
        "editor.wordBasedSuggestions": "off",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "always"
        }
    },
    "ruff.lint.args": ["--line-length=110", "--extend-ignore=F401,F841,E501"],
    "ruff.fixAll": true,
    "ruff.organizeImports": true,
    "black-formatter.args": ["--line-length=110"],
    "python.analysis.ignore": ["/usr/lib/python3.10"],
    "python.analysis.diagnosticMode": "openFilesOnly",
    "python.analysis.autoFormatStrings": true,
    "python.analysis.fixAll": ["source.convertImportFormat"],
    "python.analysis.exclude": [
        "**/node_modules",
        "**/__pycache__",
        "**/.venv"
    ],

    "[json]": {
        "editor.codeActionsOnSave": {
            "source.fixAll.sortJSON": "never"
        },
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.tabSize": 4
    },
    "[jsonc]": {
        "editor.codeActionsOnSave": {
            "source.fixAll.sortJSON": "never"
        },
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.tabSize": 4
    },
    "json.format.keepLines": true,

    "[toml]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 2
    },

    "[markdown]": {
        "files.trimTrailingWhitespace": false,
        "files.trimFinalNewlines": true
    },

    "[makefile]": {
        "editor.insertSpaces": false,
        "editor.tabSize": 8
    },

    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },

    "[dockercompose]": {
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced",
        "editor.quickSuggestions": {
            "other": true,
            "comments": false,
            "strings": true
        }
    },
    "docker.dockerComposeBuild": false,

    // "remote.autoForwardPorts": true,
    "remote.autoForwardPortsSource": "hybrid",
    "[json][jsonc]": {
        "editor.codeActionsOnSave": {
            "source.fixAll.sortJSON": "never"
        }
    }
}
