    "activity_channels": [1234567890],
    "debug": false,
    "memory_enable": false
  },
  "memory_store": {
    "database_uri": "postgresql+asyncpg://postgres:postgres@127.0.0.1:2027/eliza",
    "model": "distilroberta-base",
    "model_layer": -1,
    "short_term_amount": 10,
    "long_term_amount": 10
  },
  "model_provider": {
    "type": "ooba",
    "endpoint": "http://localhost:5000",
    "gensettings": {
